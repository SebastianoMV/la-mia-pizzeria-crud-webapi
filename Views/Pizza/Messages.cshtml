
@model List<Message>

<a class="btn btn-primary" href="@Url.Action("Index")">Indietro</a>

<table class="table container">
    @if(Model.Count >0){
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Titolo</th>
                <th scope="col">Testo</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>     
            
            @foreach (Message message in Model)
            {     
                <tr>
                    <td>@message.Id</td>
                    <td>@message.Name</td>
                    <td>@message.Title</td>
                    <td>@message.Text</td>
                    <td>@message.Email</td>            
                </tr> 
            }
    </tbody>
    }
    else
    {
         <tr>
             <td><h2>Non ci sono messaggi.</h2></td>
         </tr>
    }
</table>

